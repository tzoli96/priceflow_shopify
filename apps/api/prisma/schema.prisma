generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shop {
  id              String         @id @default(uuid())
  domain          String         @unique
  accessToken     String
  scope           String?
  isActive        Boolean        @default(true)
  installedAt     DateTime       @default(now())
  uninstalledAt   DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  templates       Template[]
  assignments     Assignment[]
  calculations    Calculation[]
}

model OAuthSession {
  id              String       @id @default(uuid())
  shop            String
  state           String
  isOnline        Boolean      @default(false)
  scope           String?
  expires         DateTime?
  accessToken     String?
  onlineAccessInfo String?     @db.Text
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([shop])
  @@index([state])
  @@index([createdAt])
}

model Template {
  id              String          @id @default(uuid())
  shopId          String
  shop            Shop            @relation(fields: [shopId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  pricingFormula  String          @db.Text
  pricingMeta     Json?
  scopeType       ScopeType       @default(GLOBAL)
  scopeValues     String[]
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Min/Max rendelési mennyiség
  minQuantity         Int?
  maxQuantity         Int?
  minQuantityMessage  String?
  maxQuantityMessage  String?

  // Sávos kedvezmények (JSON: [{minQty, maxQty, discount}])
  discountTiers       Json?

  // Expressz gyártás opció
  hasExpressOption    Boolean   @default(false)
  expressMultiplier   Decimal?  @db.Decimal(4, 2)  // pl. 1.50
  expressLabel        String?   // "Expressz (3 munkanap)"
  normalLabel         String?   // "Normál (7-10 munkanap)"

  // Megjegyzés mező
  hasNotesField           Boolean   @default(false)
  notesFieldLabel         String?   // "Megjegyzés"
  notesFieldPlaceholder   String?   // "Írja ide az egyedi kéréseit..."

  // Mennyiség presetek (JSON: [1, 5, 10] vagy [{label: "1 db", value: 1}])
  quantityPresets         Json?

  fields          TemplateField[]
  sections        TemplateSection[]
  assignments     Assignment[]
  calculations    Calculation[]

  @@index([shopId])
  @@index([shopId, isActive])
}

model TemplateSection {
  id              String    @id @default(uuid())
  templateId      String
  template        Template  @relation(fields: [templateId], references: [id], onDelete: Cascade)

  key             String    // Egyedi kulcs (pl. "size", "material")
  title           String    // Megjelenő cím
  description     String?

  layoutType      String    @default("VERTICAL")  // VERTICAL|HORIZONTAL|GRID|SPLIT|CHECKBOX_LIST
  columnsCount    Int?      // GRID esetén: 2, 3, 4

  collapsible     Boolean   @default(true)
  defaultOpen     Boolean   @default(true)
  showNumber      Boolean   @default(true)

  order           Int       @default(0)
  builtInType     String?   // SIZE|QUANTITY|EXPRESS|NOTES|FILE_UPLOAD
  presets         Json?     // SPLIT layout: [{label: "100x50", value: {width: 100, height: 50}}]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  fields          TemplateField[]

  @@unique([templateId, key])
  @@index([templateId])
}

model TemplateField {
  id                String      @id @default(uuid())
  templateId        String
  template          Template    @relation(fields: [templateId], references: [id], onDelete: Cascade)
  sectionId         String?     // Szekció referencia
  section           TemplateSection? @relation(fields: [sectionId], references: [id], onDelete: SetNull)
  key               String
  type              FieldType
  label             String
  required          Boolean     @default(false)
  placeholder       String?
  helpText          String?
  helpContent       Json?
  validation        Json?
  options           Json?       // FieldOption[] - tartalmazza imageUrl, description, features mezőket is
  conditionalRules  Json?
  useInFormula      Boolean     @default(true)
  order             Int         @default(0)
  displayStyle      String?     // 'default' | 'card' | 'chip'
  presetValues      Json?       // PresetValue[] - előre definiált értékek
  iconUrl           String?     // Ikon URL a label mellett
  unit              String?     // Mértékegység (pl. "cm", "db", "m²")
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@unique([templateId, sectionId, key])
  @@index([templateId])
  @@index([sectionId])
}

model Assignment {
  id              String       @id @default(uuid())
  shopId          String
  shop            Shop         @relation(fields: [shopId], references: [id], onDelete: Cascade)
  templateId      String
  template        Template     @relation(fields: [templateId], references: [id], onDelete: Cascade)
  priority        Int          @default(0)
  isActive        Boolean      @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([shopId])
  @@index([templateId])
  @@index([shopId, isActive])
}

model Calculation {
  id              String       @id @default(uuid())
  shopId          String
  shop            Shop         @relation(fields: [shopId], references: [id], onDelete: Cascade)
  templateId      String
  template        Template     @relation(fields: [templateId], references: [id], onDelete: Cascade)
  productId       String
  productTitle    String?
  inputs          Json
  result          Decimal      @db.Decimal(10, 2)
  breakdown       Json?
  templateVersion Int          @default(1)
  sessionId       String?
  calculatedAt    DateTime     @default(now())

  @@index([shopId])
  @@index([templateId])
  @@index([productId])
  @@index([calculatedAt])
}

enum ScopeType {
  PRODUCT
  COLLECTION
  VENDOR
  TAG
  GLOBAL
}

enum FieldType {
  NUMBER
  TEXT
  SELECT
  RADIO
  CHECKBOX
  TEXTAREA
  FILE
  PRODUCT_CARD
  DELIVERY_TIME
  EXTRAS
  GRAPHIC_SELECT
}
